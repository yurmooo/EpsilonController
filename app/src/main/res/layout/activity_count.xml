<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контейнер с задачами -->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/task_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:baselineAligned="false">

            <ImageButton
                android:id="@+id/drag_mode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="Drag Mode"
                android:padding="8dp"
                android:src="@drawable/ic_drag" />

            <!-- TabLayout по центру -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/task_tabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/CenteredTabText"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="46dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="Назад"
                android:padding="8dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>
    </LinearLayout>

    <!-- Контейнер с управляющими элементами -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="727dp"
        android:layout_height="309dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_container"
        app:layout_constraintVertical_bias="1.0">

        <!-- Группа точек -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Точка 1 -->
                <Button
                    android:id="@+id/get_pos_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Начало"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Точка 2 -->
                <Button
                    android:id="@+id/get_pos_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Среднее"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Точка 3 -->
                <Button
                    android:id="@+id/get_pos_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Конец"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pos3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Группа кнопок управления -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/get_pos_btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отход" />

                <TextView
                    android:id="@+id/pos4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/get_pos_btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Подход" />

                <TextView
                    android:id="@+id/pos5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/get_pos_btn6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дом. положение" />

                <TextView
                    android:id="@+id/pos6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropdown_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/main_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <!-- Контейнер для новых блоков с возможностью прокрутки -->
            <FrameLayout
                android:id="@+id/task_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </ScrollView>

        <Button
            android:id="@+id/go_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запуск"
            app:layout_constraintTop_toBottomOf="@id/main_container"
            app:layout_constraintBottom_toTopOf="@id/task_container"/>

        <!-- Кнопка добавления нового элемента -->
        <Button
            android:id="@+id/add_block_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Добавить элемент"
            app:layout_constraintTop_toBottomOf="@id/main_container"
            app:layout_constraintBottom_toTopOf="@id/task_container"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>