<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контейнер с задачами -->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_block_btn">

        <LinearLayout
            android:id="@+id/task_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:baselineAligned="false">

            <!-- Кнопка Drag Mode слева -->
            <ImageButton
                android:id="@+id/drag_mode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="Drag Mode"
                android:padding="8dp"
                android:src="@drawable/ic_drag" />

            <!-- TabLayout по центру -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/task_tabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tabMode="scrollable"
                app:tabIndicatorColor="@android:color/black"
                app:tabTextColor="@android:color/darker_gray"
                app:tabSelectedTextColor="@android:color/black"
                app:tabRippleColor="@android:color/transparent" />

            <!-- Кнопка "Назад" справа -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="46dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="Назад"
                android:padding="8dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <!-- Контейнер для новых блоков с возможностью прокрутки -->
            <FrameLayout
                android:id="@+id/task_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </ScrollView>
        <!--        <ScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:fillViewport="true">-->

<!--            <LinearLayout-->
<!--                android:id="@+id/dynamic_task_container"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="vertical"-->
<!--                android:divider="@android:drawable/divider_horizontal_dark"-->
<!--                android:showDividers="middle"/>-->
<!--        </ScrollView>-->
    </LinearLayout>

    <!-- Кнопка добавления нового элемента -->
    <Button
        android:id="@+id/add_block_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Добавить элемент"
        app:layout_constraintTop_toBottomOf="@id/main_container"
        app:layout_constraintBottom_toTopOf="@id/buttons_container"/>

    <!-- Контейнер кнопок и текстов внизу -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Точка 1 -->
        <Button
            android:id="@+id/get_pos_btn1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Точка 1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/pos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
            android:textSize="8sp"
            android:maxLines="3"
            app:layout_constraintStart_toEndOf="@id/get_pos_btn1"
            app:layout_constraintBottom_toBottomOf="@id/get_pos_btn1"/>

        <!-- Точка 2 -->
        <Button
            android:id="@+id/get_pos_btn2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Точка 2"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/pos1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/pos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
            android:textSize="8sp"
            android:maxLines="3"
            app:layout_constraintStart_toEndOf="@id/get_pos_btn2"
            app:layout_constraintBottom_toBottomOf="@id/get_pos_btn2"/>

        <!-- Точка 3 -->
        <Button
            android:id="@+id/get_pos_btn3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Точка 3"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/pos2"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/pos3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
            android:textSize="8sp"
            android:maxLines="3"
            app:layout_constraintStart_toEndOf="@id/get_pos_btn3"
            app:layout_constraintBottom_toBottomOf="@id/get_pos_btn3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>