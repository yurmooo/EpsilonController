<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контейнер с задачами -->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/task_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp"
            android:baselineAligned="false">

            <ImageButton
                android:id="@+id/drag_mode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="Drag Mode"
                android:padding="8dp"
                android:src="@drawable/ic_drag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="П:" />

            <Spinner
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="И:" />

            <Spinner
                android:id="@+id/tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- TabLayout по центру -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/task_tabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/CenteredTabText"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="46dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="Назад"
                android:padding="8dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>
    </LinearLayout>

    <!-- Блок с точками 1–3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/main_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Точка 1 -->
                <Button
                    android:id="@+id/get_pos_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Начало"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Точка 2 -->
                <Button
                    android:id="@+id/get_pos_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Среднее"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Точка 3 -->
                <Button
                    android:id="@+id/get_pos_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Конец"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pos3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Блок с точками 4–6 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/controls_container_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/get_pos_btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отход" />

                <TextView
                    android:id="@+id/pos4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/get_pos_btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Подход" />

                <TextView
                    android:id="@+id/pos5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/get_pos_btn6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дом. положение" />

                <TextView
                    android:id="@+id/pos6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X=0, Y=0\n Z=0, Rx=0\n Ry=0, Rz=0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Кнопка сохранения -->
    <Button
        android:id="@+id/save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/dropdown_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/main_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <!-- Контейнер для новых блоков с возможностью прокрутки -->
            <FrameLayout
                android:id="@+id/task_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/main_container"
            app:layout_constraintBottom_toTopOf="@id/task_container">

            <Button
                android:id="@+id/go_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Старт"/>

            <Button
                android:id="@+id/house"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Дом" />

            <Button
                android:id="@+id/otxod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="О" />

            <Button
                android:id="@+id/podxod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="П" />

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/stop_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:text="Экстр.Стоп"/>
        </LinearLayout>

        <!-- Кнопка добавления нового элемента -->
        <Button
            android:id="@+id/add_block_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Добавить элемент"
            app:layout_constraintTop_toBottomOf="@id/main_container"
            app:layout_constraintBottom_toTopOf="@id/task_container"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>