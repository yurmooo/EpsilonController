    <style name="TabTextCentered" parent="TextAppearance.Design.Tab">
        <item name="android:gravity">center</item>
    </style>

    <style name="CenteredTabText" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">#2196F3</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabTextColor">#888888</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>